<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.vinga129.savolax.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_products"
        android:name="com.vinga129.savolax.ui.products.ProductsFragment"
        android:label="@string/title_products"
        tools:layout="@layout/fragment_products" />

    <fragment
        android:id="@+id/navigation_add_post"
        android:name="com.vinga129.savolax.ui.add_post.AddPostFragment"
        android:label="@string/title_post"
        tools:layout="@layout/fragment_add_post" />

    <fragment
        android:id="@+id/navigation_other"
        android:name="com.vinga129.savolax.ui.other.OtherFragment"
        android:label="@string/title_other"
        tools:layout="@layout/fragment_other" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.vinga129.savolax.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_navigation_account_to_postFragment"
            app:destination="@id/navigation_post" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.vinga129.savolax.ui.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/toPost"
            app:destination="@id/navigation_post" />
    </fragment>
    <fragment
        android:id="@+id/navigation_post"
        android:name="com.vinga129.savolax.ui.post.PostFragment"
        android:label="PostFragment" >
        <action
            android:id="@+id/toPostProfile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <action android:id="@+id/moveToSpecificFragment"
        app:destination="@id/navigation_post"/>

</navigation>